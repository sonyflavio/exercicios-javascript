const leia = require('readline-sync')

salarioBruto = leia.questionFloat("Informe o salario bruto: ")
adcNoturno = leia.questionFloat("Informe o adicional noturno: ")
horasExtras = leia.questionFloat("Informe total de horas extras: ")
descontos = leia.questionFloat("Informe o desconto: ")

salarioLiquido = (salarioBruto+adcNoturno+(horasExtras*5)) - descontos

console.log("Salário Liquído: ", salarioLiquido.toFixed(2))